{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"allowArbitraryExtensions": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@api/*": ["src/api/*"],
			"@store/*": ["src/store/*"],
			"@hooks/*": ["src/hooks/*"],
			"@declares/*": ["src/declares/*"],
			"@utils/*": ["src/utils/*"],
			"@modals/*": ["src/modals/*"],
			"@modules/*": ["src/modules/*"],
			"@pages/*": ["src/pages/*"],
			"@router/*": ["src/router/*"],
			"@components/*": ["src/components/*"]
		}
	},
	"types": [
        "@types/jest", 
        "node"
    ],
	"include": [
		"src/**/*"
	],
	"exclude": [
        "node_modules", 
		"src/*.test.ts"
    ],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}